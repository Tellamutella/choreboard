<div class="tasks-info">
    <h3>Tasks:</h3>
    <div class="container">
        <ul>
            <%  @tasks.each do |t| %>
            <!-----button---->
            <p class="test">
                <%= t.objective %>
            </p>
            <!-- The Modal -->
            <div class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <%= t.key_results %>
                    <br>
                    <br>
                    <p> Example </p>
                    <%= cl_image_tag t.photo, height: 300, width: 400, crop: :fill %>
                </div>
            </div>
            <% end %>
            <!-- Trigger/Open The Modal -->
            <div class="test btn-add-object">Add Tasks</div>
            <!-- The Modal -->
            <div class="modal">
                <!-- Modal content -->
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <%= simple_form_for @task do |f| %>
                    <%= f.input :objective %>
                    <%= f.input :key_results %>
                    <%= f.input :photo %>
                    <%= f.input :photo_cache, as: :hidden %>
                    <% @list = current_parent.children.map do |child| %>
                    <% [child.id, child.email] %>
                    <% end %>
                    <%= f.input :child_id, collection: @list , label_method: :second, value_method: :first %>
                    <%= f.input :mandatory %>
                    <%= f.submit 'Add Task' %>
                    <% end %>
                </div>
            </div>
        </ul>
    </div>
</div>
