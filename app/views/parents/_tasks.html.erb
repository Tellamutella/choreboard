
<div class='add-feature'>

  <%=cl_image_tag 'list_1',  height: 34, width: 34, class: "dashboard-icon"%>
  <h3>Tasks</h3>
  <%=cl_image_tag 'plus', height: 34, width: 34,class: "test btn-add-object" %>
</div>
<div>
    <!-- Trigger/Open The Modal -->
    <!-- The Modal -->
    <div class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <%= simple_form_for @task do |f| %>
            <%= f.input :objective %>
            <%= f.input :key_results %>
            <%= f.input :photo %>
            <%= f.input :photo_cache, as: :hidden %>
            <% @list = current_parent.children.map do |child| %>
            <% [child.id, child.email] %>
            <% end %>
            <%= f.input :child_id, collection: @list , label_method: :second, value_method: :first %>
            <%= f.input :mandatory %>
            <%= f.submit 'Add Task' %>
            <% end %>
        </div>
    </div>
</div>
