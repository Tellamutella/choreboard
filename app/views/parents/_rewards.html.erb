<h3>Rewards:</h3>
<div>
    <div class="test btn-add-object">Add Rewards</div>
    <!-- The Modal -->
    <div class="modal">
        <!-- Modal content -->
        <div class="modal-content">
            <span class="close">&times;</span>
            <%= simple_form_for [@reward] do |f| %>
            <%= f.input :name , label: 'Reward'%>
            <%= f.input :details %>
            <%= f.input :price , label: 'Points needed'%>
            <%= f.input :child_id, collection: @list , label_method: :second, value_method: :first %>
            <%= f.input :daily %>
            <%= f.button :button, type: :submit %>
            <% end %>
        </div>
    </div>
    <hr>
    <!----------- Children's rewards list -------------->
    <h4>Children's Wishlist</h4>
    <div>
      <% current_parent.children.each do |child| %>
        <div><%= child.name %></div>
        <% child.rewards.reject(&:daily).each do |r| %>
          <h6> - <%= r.name %></h6>
        <% end %>
      <% end %>
    </div>
</div>
