function updateState(newState) {
  const submissionState = document.getElementById("<%= @task_submission.task.objective.strip.split.join %>submission-actions");
  submissionState.innerHTML = newState;
}

<% unless @task_submission.errors.any? %>
  updateState("<%= @task_submission.state > 0 ? 'Approved!' : 'Disapproved!' %>");
<% end %>
