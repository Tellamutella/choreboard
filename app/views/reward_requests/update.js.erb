function updateState(newState) {
  const requestState = document.getElementById("<%= @reward_request.child.name.strip %>-<%= @reward_request.reward.name.strip.split.join %>-actions");
  requestState.innerHTML = newState;
}

<% unless @reward_request.errors.any? %>
  updateState('<%= @reward_request.state > 0 ? "Granted!" : "Rejected!" %>');
<% end %>
